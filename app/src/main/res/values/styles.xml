<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentTransitions">true</item>

        <!--        Roboto Font from Android-->
        <item name="fontFamily">sans-serif</item>

        <item name="android:statusBarColor">@color/colorWhite</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="text_style">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="profile_iv_style">
        <item name="civ_border_color">@color/colorWhite</item>
        <item name="civ_border_width">2dp</item>
        <item name="android:layout_height">@dimen/profile_image_dimen</item>
        <item name="android:layout_width">@dimen/profile_image_dimen</item>
    </style>
</resources>